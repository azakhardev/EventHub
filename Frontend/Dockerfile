# 1. Build stage
FROM node:20-alpine AS build
WORKDIR /app

# Stažení závislostí
COPY event-hub-fe/package*.json ./
RUN npm install

# Build aplikace
COPY event-hub-fe/ .
RUN npm run build

# 2. Production stage
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
